            <div class="col tag">NAME</div>
            <div class="col-2 tag">UNITPRICE</div>
            <div class="col-4 tag">QUANTITY</div>
          </div>
          <% itemData.forEach(ele => { %>
            <div class="d-flex row itemContainer" >
              <img class="col-5 align-self-center" src="<%= ele.url %>" alt="bantai">
              <h2 class="col-5"><%= ele.name %></h2>
              <h2 class="col">&nbsp;&nbsp;$<%= ele.unitPrice %>&nbsp;&nbsp; &nbsp;&nbsp;</h2>
              <h2 class="col"><%= ele.quantity %></h2>
            </div>
          <%}); %>
