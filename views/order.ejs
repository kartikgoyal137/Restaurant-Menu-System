<form action="/order/place" method="POST">
<label for="tableID" class="form-label">Table Number</label><input required name="table" type="number" class="form-control" id="tableID">
<label for="tipID" class="form-label">Tip Amount ($)</label><input required name="tip" type="number" class="form-control" id="tipID" placeholder="Enter 0 for N/A">
